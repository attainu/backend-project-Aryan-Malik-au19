<div class="cover">

    <div class="alert alert-danger" id="alert" role="alert"></div>
    <div class="form-container">
        <h1 class="text-center"><img src="./icon/logo.svg" style='filter: invert(100%);' width="200px"></h1>
        <div class="d-flex justify-content-center align-items-center">
            <form action="/signup" method="POST" enctype="multipart/form-data">
                <div class="mb-3 mt-2">
                    <label for="username" class="form-label">Username:</label><br>
                    <input type="text" name="Username" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="emailId" class="form-label">Email address:</label><br>
                    <input type="text" name="email" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password:</label><br>
                    <input type="password" name="password" class="form-control" id="password" required>
                </div>
                <div class="d-flex flex-column align-items-center" style="color:lightgray">
                    <button type="submit" class="btn btn-primary w-50 mb-2">Signup</button>
                    <span>If you already have an account,
                        <a href="/">Log in</a>
                    </span>
                </div>
